<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:id="@+id/topPanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Profile"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/heading"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/image_view"
                android:src="@mipmap/ic_launcher_round"/>
            <TextView

                android:textColor="@android:color/black"
                android:layout_gravity="center"

                android:id="@+id/user_name"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="User name"
                android:textStyle="bold"/>
            <TextView

                android:layout_gravity="center"
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="email address"
                android:textStyle="normal"/>

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/user_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Description of users"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_edit_text">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/user_id"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="thisiosthecide"/>
                <Button
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/button_design"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:id="@+id/copy_button"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="copy"/>
            </RelativeLayout>



<!--            <Button-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:background="@drawable/button_design"-->
<!--                android:textColor="@android:color/white"-->
<!--                android:textStyle="bold"-->
<!--                android:textAllCaps="true"-->
<!--                android:id="@+id/weekly_report_button"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Weekly Report"/>-->

        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:fabCustomSize="40dp"
            android:id="@+id/hide_heading_button"
            android:src="@drawable/up_arrow_icon"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Tracking Info"
            android:textStyle="bold"/>
        <androidx.viewpager.widget.ViewPager
            android:layout_below="@+id/topPanel"
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.viewpager.widget.ViewPager>

    </LinearLayout>
</RelativeLayout>